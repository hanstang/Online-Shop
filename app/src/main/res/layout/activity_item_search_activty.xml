<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    tools:context="pack.com.seventhsite.seventhsite.ItemSearchActivty"
    android:background="@color/bacground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/well_super_round"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:text="ITEM"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/NamaKategori"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/header"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/line" />
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/ListItem"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Navigation Drawer -->

    <LinearLayout
        android:id="@+id/slide_menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/backgroundlist"
        android:orientation="vertical" >

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ListMenu"
            />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
